-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    -# This helper function makes a hash for params[:ratings]
    = check_box_tag "ratings[#{rating}]", "checked", @rating_filter[rating]
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
    
      -# This {:class specifies the class type of the [???]
      -# The second part (link_to)
      %th{:class => params[:order] == 'title' && "hilite"}= link_to "Movie Title", movies_path(:order=>'title', :ratings =>params[:ratings])
      %th Rating
      
      -# This first part in brackets tells the class of this link to be hilite (in css)
      %th{:class => params[:order] == 'date' && "hilite"}= link_to "Release Date", movies_path(:order=>'date', :ratings =>params[:ratings])
      %th More Info
      
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
